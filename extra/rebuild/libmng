pkgbuild_version=5
pkgname=libmng
pkgver=2.0.3

dependencies=(
    "!$pkgname"
	'libjpeg-turbo'
	'lcms2'

)
sources=(
	"http://downloads.sourceforge.net/libmng/${pkgname}-${pkgver}.tar.xz"
)

sha1sums=(
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr --disable-static
}


lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make DESTDIR="$fakeroot_dir" install
	install -v -m755 -d        ${fakeroot_dir}/usr/share/doc/libmng-2.0.3
	install -v -m644 doc/*.txt ${fakeroot_dir}/usr/share/doc/libmng-2.0.3
}


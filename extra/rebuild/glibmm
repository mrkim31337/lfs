pkgbuild_version=5
pkgname=glibmm
pkgver=2.50.0

dependencies=(
    "!$pkgname"
	'glib'
	'libsigc++'
)
sources=(
	"http://ftp.gnome.org/pub/gnome/sources/glibmm/2.50/${pkgname}-${pkgver}.tar.xz"
)

sha1sums=(
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"

	sed -e '/^libdocdir =/ s/$(book_name)/glibmm-2.50.0/' \
        -i docs/Makefile.in
	./configure --prefix=/usr

}


lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make DESTDIR="$fakeroot_dir" install
}


pkgbuild_version=5
pkgname=libcddb
pkgver=1.3.2

dependencies=(
    "!$pkgname"
)
sources=(
	
	"https://sourceforge.net/projects/libcddb/files/libcddb/1.3.2/${pkgname}-${pkgver}.tar.bz2"
)

sha1sums=(
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.bz2" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr --disable-static
}


lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make DESTDIR="$fakeroot_dir" install
}


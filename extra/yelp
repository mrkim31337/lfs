pkgbuild_version=5
pkgname=yelp
pkgver=3.22.0

dependencies=(
    "!$pkgname"
	'gsettings-desktop-schemas'
	'webkitgtk'
	'yelp-xsl'
	'desktop-file-utils'
)
sources=(
	"http://ftp.gnome.org/pub/gnome/sources/yelp/3.22/${pkgname}-${pkgver}.tar.xz"
)

sha1sums=(
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr --disable-static
}


lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make DESTDIR="$fakeroot_dir" install
}


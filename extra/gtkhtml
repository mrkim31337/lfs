pkgbuild_version=5
pkgname=gtkhtml
pkgver=4.10.0

dependencies=(
    "!$pkgname"
	'enchant'
	'gsettings-desktop-schemas'
	'gtk+'
	'iso-codes'
	'libsoup'	
)
sources=(
	
	"http://ftp.gnome.org/pub/gnome/sources/gtkhtml/4.10/${pkgname}-${pkgver}.tar.xz"
)

sha1sums=(
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr
}


lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make DESTDIR="$fakeroot_dir" DOCDIR="/usr/share/doc/${pkgname}-${pkgver}" install
}


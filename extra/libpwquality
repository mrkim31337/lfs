pkgbuild_version=5
pkgname=libpwquality
pkgver=1.3.0

dependencies=(
    "!$pkgname"
	'cracklib'
	'Linux-PAM'
)
sources=(
	
"https://fedorahosted.org/releases/l/i/libpwquality/${pkgname}-${pkgver}.tar.bz2"
)

sha1sums=(
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.bz2" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr --disable-static
}


lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make DESTDIR="$fakeroot_dir" install
}


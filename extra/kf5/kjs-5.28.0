pkgbuild_version=5
pkgname=kjs
pkgver=5.28.0

dependencies=(
	"!$pkgname"
	'boost'
	'extra-cmake-modules'
	'docbook-xml'
	'docbook-xsl'
	'giflib'
	'libepoxy'
	'libgcrypt'
	'libjpeg-turbo'
	'libpng'
	'libxslt'
	'lmdb'
	'qtwebkit'
	'phonon'
	'shared-mime-info'
	'URI'
	'wget'
	'aspell'
	'avahi'
	'libdbusmenu-qt'
	'networkmanager'
	'polkit-qt'
	'bluez'
	'modemmanager'
	'oxygen-fonts'
	'noto-fonts'
)

sources=(
	"http://download.kde.org/stable/frameworks/5.28/${pkgname}-${pkgver}.tar.xz"
)
sha1sums=(
	9866b0d6bad7aac59a886a77c17f5cde7139e21c
)

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=$KF5_PREFIX \
            -DCMAKE_PREFIX_PATH=$QT5DIR        \
            -DCMAKE_BUILD_TYPE=Release         \
            -DLIB_INSTALL_DIR=lib              \
            -DBUILD_TESTING=OFF                \
            -Wno-dev ..
}

lfs_me_build() {
	cd "${build_dir}/${pkgname}-${pkgver}/build"
	make -j5
}

lfs_me_check() {
    return
}

lfs_me_install() {
    cd "${build_dir}/${pkgname}-${pkgver}/build"
    make DESTDIR="$fakeroot_dir" install
}


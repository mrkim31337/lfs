pkgbuild_version=5
pkgname=gedit
pkgver=3.22.0

dependencies=(
    "!$pkgname"
	'glibc'
	'gsettings-desktop-schemas'
	'gtksourceview'
	'itstool'
	'libpeas'
	'gvfs'
	'iso-codes'
	'libsoup'
	'pygobject3'
)
sources=(
	"http://ftp.gnome.org/pub/gnome/sources/gedit/3.22/${pkgname}-${pkgver}.tar.xz"
)

sha1sums=(
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr --disable-spell
}


lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make DESTDIR="$fakeroot_dir" install
}

lfs_me_postinstall(){
	glib-compile-schemas /usr/share/glib-2.0/schemas
}

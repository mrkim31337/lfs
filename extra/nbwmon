pkgbuild_version=5
pkgname=nbwmon
pkgver=git

dependencies=(
    "!$pkgname"
	'ncurses'
)
sources=(
)

sha1sums=(
)

lfs_me_prepare() {
	cd ${build_dir}
	git clone https://github.com/causes-/${pkgname}
	cd ${pkgname}
	
}

lfs_me_build(){
	cd ${build_dir}/${pkgname}
	make
}

lfs_me_install() {
	cd "${build_dir}/${pkgname}"
	make DESTDIR="$fakeroot_dir" install
}


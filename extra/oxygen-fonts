pkgbuild_version=5
pkgname=oxygen-fonts
pkgver=5.4.3

dependencies=(
    "!$pkgname"
	'cmake'
	'fontforge'
)
sources=(
	"http://download.kde.org/stable/plasma/5.4.3/${pkgname}-${pkgver}.tar.xz"
)

sha1sums=(
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"
	cmake -DCMAKE_INSTALL_PREFIX=/usr .
}

lfs_me_build(){
	return
}


lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make DESTDIR="$fakeroot_dir" install
}

